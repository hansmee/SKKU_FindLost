<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.skku.map.skku_findlost">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".ListLostActivity"
            android:configChanges="screenSize|orientation|layoutDirection"
            android:screenOrientation="sensor"/>
        <activity android:name=".ListFoundActivity"
            android:configChanges="screenSize|orientation|layoutDirection"
            android:screenOrientation="sensor" />
        <activity android:name=".ReportLostActivity"
            android:configChanges="screenSize|orientation|layoutDirection"
            android:screenOrientation="sensor"/>
        <activity android:name=".ReportFoundActivity"
            android:configChanges="screenSize|orientation|layoutDirection"
            android:screenOrientation="sensor" />
        <activity android:name=".MypageActivity"
            android:configChanges="screenSize|orientation|layoutDirection|keyboardHidden"
            android:screenOrientation="sensor" />
        <activity android:name=".PostLostActivity" />
        <activity android:name=".PostFoundActivity" />
        <activity android:name="edu.skku.map.skku_findlost.SendBird.SendBirdActivity"/>
        <activity android:name="edu.skku.map.skku_findlost.SendBird.ChatMainActivity"/>
        <activity android:name="edu.skku.map.skku_findlost.SendBird.GroupChannelActivity"/>
        <activity android:name="edu.skku.map.skku_findlost.SendBird.CreateGroupChannelActivity"/>

        <service android:name=".fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>